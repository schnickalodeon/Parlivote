@using Parlivote.Web.Views.Components.Meetings
<DialogBase @ref="@this.dialog"
            Title="Antrag bearbeiten"
            SubmitButtonText="Speichern"
            CancelButtonText="Abbrechen"
            Error="@this.error"
            OnSubmit="SaveMotionViewAsync">
            
    @*Titel*@
    <FormControlBase LabelText="Beschreibung">
        <TextBoxBase @bind-Value="motionView.Title"/>
    </FormControlBase>

    @*Text*@
    <FormControlBase LabelText="Beschreibung">
        <TextBoxBase @bind-Value="motionView.Text" Multiline="true"/>
    </FormControlBase>
    
    @*Meeting*@
    <FormControlBase LabelText="Meeting">
        <MeetingDropDown @bind-MeetingId="motionView.MeetingId"/>
    </FormControlBase>

    <FormControlBase LabelText="Status">
        <ChangeMotionStateComponent Motion="@this.motionView" />
    </FormControlBase>

    <Condition Evaluation="@(this.error.IsNullOrWhitespace() == false)">
        <Match>
            <ValidationSummaryBase ValidationErrors="@this.validationErrors" />
            <ErrorBase ErrorMessage="@error" />
        </Match>
    </Condition>

</DialogBase>