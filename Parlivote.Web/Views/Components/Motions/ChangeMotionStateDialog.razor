@using Parlivote.Shared.Models.Motions
<DialogBase
    @ref="dialog"
    Title="Change State"
    CancelButtonText="Cancel"
    SubmitButtonText="Save"
    OnSubmit="SaveState">
    
    <div class="d-flex flex-row align-items-center justify-content-center">
        <ButtonBase
            @ref="pendingButton"
            OnClick="(() => SetState(MotionState.Pending))"
            Text="Aussehend"
            Disabled="!pendingButtonEnabled"
            CustomCss="mx-2 e-warning"/>

        <ButtonBase
            @ref="cancelledButton"
            OnClick="(() => SetState(MotionState.Cancelled))"
            Text="Abgebrochen"
            Disabled="!cancelledButtonEnabled"
            CustomCss="mx-2 bg-secondary"/>

        <ButtonBase
            @ref="submittedButton"
            OnClick="(() => SetState(MotionState.Submitted))"
            Text="Eingereicht"
            Disabled="!submittedButtonEnabled"
            CustomCss="mx-2"/>
    </div>

    <div class="d-flex align-items-center justify-content-center h-100 mt-4 border border-2 p-2">
        <span class="badge @GetPillCssByStatus(this.motion.State) rounded-pill me-4" style="font-size: 1em;">
            @this.motion.State
        </span>
        
        <SfIcon Name="IconName.ArrowRight" Size="IconSize.Large" />

        <span class="badge @GetPillCssByStatus(this.stateToUpdate) rounded-pill ms-4" style="font-size: 1em;">
            @this.stateToUpdate.GetValue()
        </span>
    </div>

</DialogBase>