@using PrettyBlazor
@using Parlivote.Web.Models;

<Condition Evaluation="@(this.State == ComponentState.Loading)">
    <Match>
        <Condition Evaluation="@(this.Loading is null)">
            <Match>
                <SpinnerBase Value="@this.LoadingText" IsVisible="true" />
            </Match>
            <NotMatch>
                @Loading
            </NotMatch>
        </Condition>
    </Match>
</Condition>

<Condition Evaluation="@(this.State == ComponentState.Content)">
    <Match>
        @Content
    </Match>
</Condition>

<Condition Evaluation="@(this.State == ComponentState.Error)">
    <Match>
        <Condition Evaluation="@(this.Error is null)">
            <Match>
                <ErrorBase ErrorMessage="@this.ErrorMessage" />
            </Match>
            <NotMatch>
                @Error
            </NotMatch>
        </Condition>
    </Match>
</Condition>