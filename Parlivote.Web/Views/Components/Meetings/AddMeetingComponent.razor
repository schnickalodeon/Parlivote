<DialogBase @ref="@this.dialog"
            Title="Add Meeting"
            SubmitButtonText="Add"
            CancelButtonText="Cancel"
            Error="@this.error"
            OnSubmit="AddMeetingViewAsync">

    @*Description*@
    <FormControlBase LabelText="Beschreibung">
        <TextBoxBase @bind-Value="meetingView.Description"/>
    </FormControlBase>

    @*Start*@
    <FormControlBase LabelText="Start">
        <DateTimePickerBase @bind-Value="meetingView.Start" />
    </FormControlBase>

    <Condition Evaluation="@(this.error.IsNullOrWhitespace() == false)">
        <Match>
            <ValidationSummaryBase ValidationErrors="@this.validationErrors" />
            <ErrorBase ErrorMessage="@error" />
        </Match>
    </Condition>

</DialogBase>